---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const poems = await getCollection('poetry');
const sortedPoems = poems.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Base
  title="Poetry - Gully Burns"
  description="Poems and verse."
>
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-16">
    <header class="mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold text-midnight-50 mb-4">
        Poetry
      </h1>
      <p class="text-midnight-300 text-lg max-w-2xl font-serif italic">
        Verse, fragments, and attempts at capturing something ineffable.
      </p>
    </header>

    {sortedPoems.length === 0 ? (
      <div class="text-center py-16">
        <p class="text-midnight-400 text-lg">
          No poems yet. Check back soon.
        </p>
      </div>
    ) : (
      <ul class="space-y-8">
        {sortedPoems.map((poem) => (
          <li>
            <a href={`/poetry/${poem.slug}`} class="block group">
              <article class="p-6 -mx-6 rounded-lg hover:bg-midnight-900/50 transition-colors">
                <h2 class="text-xl font-semibold text-midnight-100 group-hover:text-truth-400 transition-colors">
                  {poem.data.title}
                </h2>
                {poem.data.description && (
                  <p class="mt-2 text-midnight-300 line-clamp-2 font-serif italic">
                    {poem.data.description}
                  </p>
                )}
                <time
                  datetime={poem.data.pubDate.toISOString()}
                  class="block mt-3 text-sm text-midnight-500"
                >
                  {poem.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </article>
            </a>
          </li>
        ))}
      </ul>
    )}
  </div>
</Base>

<style>
  :global(html:not(.dark)) h1 {
    @apply text-midnight-950;
  }
  :global(html:not(.dark)) h2 {
    @apply text-midnight-900;
  }
  :global(html:not(.dark)) p,
  :global(html:not(.dark)) .text-midnight-300 {
    @apply text-midnight-700;
  }
  :global(html:not(.dark)) time,
  :global(html:not(.dark)) .text-midnight-500 {
    @apply text-midnight-600;
  }
  :global(html:not(.dark)) article:hover {
    @apply bg-midnight-100/50;
  }
</style>
