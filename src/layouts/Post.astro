---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, tags = [] } = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={title} description={description}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 py-12">
    <header class="mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-midnight-950 dark:text-midnight-100 mb-4">
        {title}
      </h1>
      <div class="flex flex-wrap items-center gap-4 text-sm text-midnight-400">
        <time datetime={pubDate.toISOString()}>
          {formattedPubDate}
        </time>
        {updatedDate && (
          <span>
            (Updated: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>)
          </span>
        )}
      </div>
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map((tag) => (
            <span class="px-2 py-1 text-xs rounded-md bg-midnight-800 text-midnight-300">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="prose prose-lg max-w-none
      dark:prose-invert
      prose-headings:text-midnight-950 dark:prose-headings:text-midnight-100
      prose-h1:text-xl prose-h1:sm:text-2xl
      prose-h2:text-lg prose-h2:sm:text-xl
      prose-p:text-midnight-950 dark:prose-p:text-midnight-200
      prose-a:text-truth-700 dark:prose-a:text-truth-400 prose-a:no-underline hover:prose-a:underline
      prose-strong:text-midnight-950 dark:prose-strong:text-midnight-100
      prose-code:text-truth-800 dark:prose-code:text-truth-300 prose-code:bg-midnight-100 dark:prose-code:bg-midnight-800 prose-code:px-1 prose-code:rounded
      prose-pre:bg-midnight-100 dark:prose-pre:bg-midnight-900 prose-pre:border prose-pre:border-midnight-300 dark:prose-pre:border-midnight-700
      prose-blockquote:border-truth-500 prose-blockquote:text-midnight-950 dark:prose-blockquote:text-midnight-300 prose-blockquote:font-serif prose-blockquote:italic
      prose-li:text-midnight-950 dark:prose-li:text-midnight-200
    ">
      <slot />
    </div>
  </article>
</Base>

<style>
  :global(html:not(.dark)) article time,
  :global(html:not(.dark)) article .text-midnight-400 {
    @apply text-midnight-950;
  }
  :global(html:not(.dark)) article .bg-midnight-800 {
    @apply bg-midnight-200 text-midnight-950;
  }
  /* Remove quotation marks from blockquotes */
  :global(.prose blockquote p::before),
  :global(.prose blockquote p::after) {
    content: none !important;
  }
</style>
